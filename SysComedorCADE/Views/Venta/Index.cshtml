<div ng-app="AppVenta" ng-controller="CtrlVenta">


    <div class="container modal-content">
        <div class="modal-header">
            <h3><span>Punto de venta</span></h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-offset-4 col-md-8">
                    <form>
                        <div class="form-group">
                            <label class="form-label-group">Buscar Persona</label>
                            <div class="col-md-8">
                                <input id="idbuscar" ng-model="buscarp.CiRuc" class="form-control" type="text" placeholder="Buscar por CI" />

                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-2 col-md-5">

                </div>
                <div class="col-md-5">

                </div>

            </div>
        </div>
        <div class="modal-footer">
            <!-- Button trigger modal -->
            <button id="btnmodalvende" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#Vende">
                Vender
            </button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="Vende" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <form ng-submit="guardaventa()">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Detalle de Venta</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                @*<h3 class="panel-title"></h3>*@
                                <div class="row" @*ng-repeat="dt in  perventa"*@>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label class="fa fa-user">
                                                    Cliente
                                                </label>
                                                <input class="form-control" ng-model="perventa.NombresCompletos" type="text" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label class="fa fa-user">
                                                    codigo/CI
                                                </label>
                                                <input class="form-control" ng-model="perventa.CiRuc" type="text" />

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> <div class="panel-body">
                                <div class="table table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Cant</th>
                                                <th>Detalle del Servicio</th>
                                                <th>Costo Unit</th>
                                                <th> Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <input class="form-control" ng-class-even="calculoventa()" ng-model="dt.cant" type="text" />
                                                </td>
                                                <td>
                                                    <input class="form-control" ng-model="dt.detalle" type="text" value="" />
                                                </td>
                                                <td>
                                                    <input class="form-control" ng-class-even="calculoventa()" ng-model="dt.vunit" type="text" />
                                                </td>
                                                <td>
                                                    <input class="form-control" ng-model="dt.total" type="text" />
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>




                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <center>
                                    <label><input id="CheckCuenta" type="checkbox" class="form-control" checked />Agregar Cuenta </label>
                                </center>
                            </div>
                            <div class="col-md-6">
                                <center>
                                    <label><input id="CkeckContado" type="checkbox" class="form-control" />Pago Contado </label>
                                </center>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">

                       <button id="btnmodalvendehide" type="button" class="btn btn-default" data-dismiss="modal" hidden>Close</button>
                        <button ng-click="guardaventa(dt)" type="submit" class="btn btn-primary">ACEPTAR</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>



