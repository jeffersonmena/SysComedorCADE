@model SysComedorCADE.Models.Persona

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4><span class="fa fa-user"> Personas</span></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="col-md-2">Tipo Persona:</span>
            <div class="col-md-10">
                @Html.DropDownList("CodTipoPer", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodTipoPer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Nombres Completos:
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombresCompletos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombresCompletos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <span class="col-md-2">
                Ci/Ruc:
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CiRuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CiRuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Teléfono :
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Telf, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telf, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Celular:
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Direccion:
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dir, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dir, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Genero:
            </span>
            <div class="col-md-10">
                @Html.DropDownList("CodGenero", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodGenero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Entidad:
            </span>
            <div class="col-md-10">
                @Html.DropDownList("CodEntidad", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodEntidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10"><br />
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a href="@Url.Action("Index","Persona",null)"><button type="button" class="btn btn-warning"> Regresar</button></a><br />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
