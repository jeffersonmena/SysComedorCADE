@model IEnumerable<SysComedorCADE.Models.Persona>

@{
    ViewBag.Title = "Index";
}

<a href="@Url.Action("Create","Persona",null)"><button type="button" class="btn btn-primary"><span class="fa fa-plus"></span> Nuevo</button></a><br />

<center>
    <h4>Lista de Personas</h4>
</center>

<div class="table table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                Nombres Completos
            </th>
            <th>
                Ci /Ruc
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Telf)
            </th>*@
            <th>
                Celular
            </th>
            <th>
                Dirección
            </th>
            @*<th>
                Entidad
            </th>*@
            <th>
                Genero
            </th>
            <th>
                Tipo Persona
            </th>
            <th></th>
            <th></th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombresCompletos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiRuc)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Telf)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Cel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dir)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Entidad.NombreEntidad)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Genero.Abrev)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPersona.Detalle)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Persona",new { id = item.CodPersona })"><button type="button" class="btn btn-success btn-xs"><span class="fa fa-edit"></span></button></a>                  
                </td>
                <td>
                    <a href="@Url.Action("Delete","Persona",new { id = item.CodPersona })"><button type="button" class="btn btn-danger btn-xs"><span class="fa fa-trash"></span></button></a>
                </td>
                <td>
                    <a href="@Url.Action("Details","Persona",new { id = item.CodPersona })"><button type="button" class="btn btn-warning btn-xs"><span class="fa fa-list"></span></button></a>
                </td>
            </tr>
        }

    </table>
</div>

