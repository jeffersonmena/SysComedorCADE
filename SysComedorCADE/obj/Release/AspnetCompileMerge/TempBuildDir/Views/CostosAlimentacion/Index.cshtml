@model IEnumerable<SysComedorCADE.Models.CostosAlimentacion>

@{
    ViewBag.Title = "Index";
}


   @* @Html.ActionLink("Create New", "Create", new {@type= "button", @class = "btn btn-default" })*@
   <a href="@Url.Action("Create","CostosAlimentacion",null)">
 <button type="button" class="btn btn-primary"><i class="fa fa-coffee"></i> Nuevo</button>
</a> 
<div class="table table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.anio)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Detalle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.anio)
                </td>
                <td>
                    <a href="@Url.Action("Edit","CostosAlimentacion",new { id = item.CodCosto })">
                        <button type="button" class="btn btn-primary"><i class="fa fa-coffee"></i> Nuevo</button>
                    </a>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CodCosto ,@class= "glyphicon glyphicon-trash" })
                    @Html.ActionLink("Details", "Details", new { id = item.CodCosto }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CodCosto })
                </td>
            </tr>
        }

    </table>
</div>

