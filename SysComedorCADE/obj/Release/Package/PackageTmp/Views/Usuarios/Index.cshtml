@model IEnumerable<SysComedorCADE.Models.Usuarios>

@{
    ViewBag.Title = "Index";
}

<a href="@Url.Action("Create","Usuarios",null)"><button type="button" class="btn btn-primary"><span class="fa fa-user"></span> Nuevo</button></a><br />

<center>
    <h4>Lista de Usuarios</h4>
</center>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FRegistro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.NombresCompletos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FRegistro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.NombresCompletos)
        </td>
        <td>
            <a href="@Url.Action("Edit","Usuarios",new { id = item.CodUsuario })"><button type="button" class="btn btn-success btn-xs"><span class="fa fa-edit"></span></button></a>
            <a href="@Url.Action("Delete","Usuarios",new { id = item.CodUsuario })"><button type="button" class="btn btn-danger btn-xs"><span class="fa fa-trash"></span></button></a>
            <a href="@Url.Action("Details","Usuarios",new { id = item.CodUsuario })"><button type="button" class="btn btn-warning btn-xs"><span class="fa fa-list"></span></button></a>
        </td>
    </tr>
}

</table>
